@using Northwind.Models
@model IEnumerable<Order>

<div id="User" style="display:none;" data-email="@User.Identity.Name" data-customer="@User.IsInRole("Employee")"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                <div class="form-row">
                    <div class="form-group col-md-4 mb-0">
                        <div class="form-check text-left">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#colorKey">
                                Color Key
                            </button>
                        </div>
                    </div>
                    <div class="form-group col-md-4 mb-0">
                        <div class="form-check text-right">
                            <input class="form-check-input" type="checkbox" id="Unshipped" checked>
                            <label class="form-check-label" for="Unshipped">Unshipped</label>
                        </div>
                    </div>
                </div>
            </th>
            <th scope="col" class="text-left">Order ID</th>
            <th scope="col" class="text-right">Order Date</th>
            <th scope="col" class="text-right">Required Date</th>
            <th scope="col" class="text-right">Shipped Date</th>
        </tr>
    </thead>
    <tbody id="order_rows" data-id="@ViewBag.id">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="colorKey" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Color Key</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="font-size:large">
                <b style="color:darkorange; opacity:.5">Orange</b>: Unshipped <br />
                <br />
                <b style="color:red; opacity:.5">Red</b>: Overdue
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="../../js/order.js"></script>
}